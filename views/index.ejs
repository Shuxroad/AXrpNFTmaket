    <sction class="item-section">

      <form action="/" method="GET">
        <div class="listlink">
          <strong>外部サイト:</strong><a href="https://test.bithomp.com/ja/nft-explorer?issuer=rn3pWURH2KqqkijpyphuFRdLZMmw9ppeEb" target="_blank">NFT一覧</a>
        </div>
        <h2 class="item-label">NFT Owner information</h2>
        <div>
          <label>NFTs: <%= nfts.length %></label>
        </div>
        <div>
          <label>Account Address</label>
        </div>
        <div class="inputWithIcon inputIconBg">
          <input type="text" placeholder="Account Address" id="accountField" name="accountField" value="rn3pWURH2KqqkijpyphuFRdLZMmw9ppeEb">
          <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
        </div>
        <button class="btn" type="submit">Update</button>

      </form>
    </sction>


    <sction class="item-section">
      <h2 class="item-label">Axross Coins</h2>
      <div class="grid">
        <% for(let nft of nfts){ %>
          <div class="item">
            <img class="genimg" alt=<%= nft.nftid %> src=<%= nft.imageUrl %>>
            <% if (isIssuer) { %>
              <p class="pricetag"><strong><%= nft.selloffer_amount %></strong> XRP</p>
              <button class="btn" onclick="offerItem('<%= nft.nftid %>, <%= nft.selloffer_id %>')">Buy NFT</button>
            <% } %>
          </div>
        <% } %>
      </div>
    </sction>

    <% if (isIssuer) { %>
      <sction class="item-section">
      <div class="loadmore">
        <button class="btn" onclick="loadmore()">Load More</button>
      </div>
      <div id="loading">
        <p>LOADING...</p>
        <div class="spinner-box">
          <div class="circle-border">
            <div class="circle-core"></div>
          </div>  
        </div>
      </div>


      <div id="loadItems" class="grid">
      </div>

