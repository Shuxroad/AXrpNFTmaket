    function offerItem(nftid, id){
      console.log("Offer NFT ID:" + id);

      $.ajax({
//        url: 'http://localhost:3000/req-post',
        url: '/req-xumm',
        type: 'POST',
        data: {
          'id': id
        },
        dataType: 'text'
      }).done(function( data, textStatus, jqXHR ) {
        console.log("SUCESS");
//        console.log(data);
        jsonData = JSON.parse(data);
        window.open(jsonData.xummlink, '_blank');

      }).fail(function( jqXHR, textStatus, errorThrown) {
        console.log("FAIL");
      }).always(function( jqXHR, textStatus) {
        console.log("DONE");
      });
    }


    function loadmore(){
      console.log("Load More");
      $("#loading").addClass("start");

      $.ajax({
//        url: 'http://localhost:3000/req-post',
        url: '/loadmore',
        type: 'POST',
        data: {
          'id': "test"
        },
        dataType: 'text'
      }).done(function( data, textStatus, jqXHR ) {
        console.log("SUCESS");
        console.log(data);
        nfts = JSON.parse(data);

        var l_ele = $("#loadItems");
        l_ele.html("");

        for (const nft of nfts) {
          var text = `<div class="item"><img class="genimg" alt=${nft.nftid} src=${nft.imageUrl}><p class="pricetag"><strong>${nft.selloffer_amount}</strong> XRP</p><button class="btn" onclick="offerItem('${nft.selloffer_id}')">Buy NFT</button></div>`
          l_ele.append(text);
        }

      }).fail(function( jqXHR, textStatus, errorThrown) {
        console.log("FAIL");
      }).always(function( jqXHR, textStatus) {
        console.log("DONE");
        $("#loading").removeClass("start");
      });
    }

  </script>



